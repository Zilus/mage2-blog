<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceBlock name="breadcrumbs">
			<action method="addCrumb">
				<argument name="crumbName" xsi:type="string">Inicio</argument>
				<argument name="crumbInfo" xsi:type="array">
					<item name="title" xsi:type="string" translate=”true”>Inicio</item>
					<item name="label" xsi:type="string" translate=”true”>Inicio</item>
					<item name="link" xsi:type="string">/</item>
				</argument>
			</action>
			<action method="addCrumb">
				<argument name="crumbName" xsi:type="string">Blog</argument>
				<argument name="crumbInfo" xsi:type="array">
					<item name="title" xsi:type="string" translate=”true”>Blog</item>
					<item name="label" xsi:type="string" translate=”true”>Blog</item>
					<item name="link" xsi:type="string">/blog</item>
			</argument>
			</action>
		</referenceBlock>
        <referenceContainer name="content">
            <block class="TCK\Blog\Block\PostView" name="blog.list" template="TCK_Blog::view.phtml" />
        </referenceContainer>
    </body>
</page>
